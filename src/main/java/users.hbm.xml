<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 2.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">


<hibernate-mapping>
	<class name="com.bean.UserBean" table="users">


		<id name="userId" type="int">
			<generator class="native"></generator>
		</id>

		<property name="firstName"></property>
		<property name="email"></property>
		<property name="password"></property>

		<!-- <one-to-one name="role" class="com.bean.RoleBean" cascade="save-update"></one-to-one> -->
		<many-to-one name="role" column="roleId" class="com.bean.RoleBean"  not-null="true"></many-to-one>

	</class>

</hibernate-mapping>